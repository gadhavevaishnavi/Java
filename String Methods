// Java Math Methods
/*
8.0
64
0.7381962723217685
21
20
*/

class MathMethod
 {
  public static void main(String[] args)
 {
    System.out.println(Math.sqrt(64));  
        System.out.println(Math.abs(-64));   //Absolute (+ve)
            System.out.println(Math.random());  //random in berween 0 and 1
                System.out.println(Math.max(20,21));  
                    System.out.println(Math.min(20,21));  
    
  }
}
