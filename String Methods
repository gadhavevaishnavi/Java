//String Methods
public class StringMethods
{
  public static void main(String args[]) 
{
    String s1 = "India";
    String s2 = "Is My Country";
    String s3 =    "Welcome to geeksforgeeks";
    System.out.println(s1 + " " + s2);//India Is My Country
    
     System.out.println(s1.charAt(4)); // a (char at ith index)
     
    System.out.println(s2.substring(2)); //( My Country)return substring from ith index character to end
   
    System.out.println(s2.substring(0,4)); // (Is M) return substring from ith index to j-1  here 0-starting pt & 4-ending pt
     System.out.println(s2.substring(0)); //Is My Country 
     
        System.out.println(s2.indexOf('M')); // 3 (Return index(also count space))
     
  System.out.println(s3.length());  //24
     System.out.println(s3.indexOf('g'));  //11
        System.out.println(s3.indexOf('g',13));  //19 
        
    System.out.print(s2.lastIndexOf('n'));//9
    
  
  }
}
