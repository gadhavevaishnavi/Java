//StringBuilder Methods
/*
hello my dear Sejal Feran
 hello Welcome my dear Sejal Feran
 hellome my dear Sejal Feran
nareF lajeS raed ym emolleh
Vaishnavi  Pyaari
*/

public class SBufferMethod 
{
  public static void main(String args[]) 
{
    String s1 = " hello my dear Sejal";
    String s2 = "Feran";
  
  StringBuilder sb = new StringBuilder(s1);
 // System.out.println( sb.append("Feran ")); // hello my dear SejalFeran 
 System.out.println( sb.append(" "+ s2)); // hello my dear Sejal Feran
  
   
   System.out.println( sb.insert(6," Welcome")); // hello Welcome my dear Sejal Feran
  
    
   System.out.println( sb.delete(5, 11)); // hellome my dear Sejal Feran
  
   
    System.out.println( sb.reverse()); //nareF lajeS raed ym emolleh 
   
  String s3 = "Vaishnavi ";
  
 StringBuilder sb1 = new StringBuilder(s3);
 sb1.append(" Pyaari");
 System.out.println(sb1); //Vaishnavi  Pyaari
 // String result =sb1.toString();
 // System.out.println(result);  //Vaishnavi  Pyaari
  }
}

